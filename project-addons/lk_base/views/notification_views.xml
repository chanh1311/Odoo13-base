<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--tree view-->
        <record id="notification_content_view_tree" model="ir.ui.view">
            <field name="name">notification.content.tree</field>
            <field name="model">notification.content</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0" edit="0">
                    <field name="res_model"/>
                    <field name="send_date" icon="fa-clock-o"/>
                    <field name="title"/>
                    <field name="content"/>
                    <field name="user_id" widget="badge"/>
                    <field name="type"/>
                    <field name="kind" widget="badge"/>
                    <field name="state" widget="badge"/>
                    <field name="process" widget="badge"
                           options="{'fg_color': '#D9230F: process==\'error\'; #adb5bd: process==\'done\';'}"/>
                    <field name="error_message"/>
                    <field name="company_id" widget="badge" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <!--form view-->
        <record id="notification_content_view_form" model="ir.ui.view">
            <field name="name">notification.content.form</field>
            <field name="model">notification.content</field>
            <field name="arch" type="xml">
                <form create="0" delete="0" edit="0">
                    <header>
                        <button name="action_read" string="Read Notification" type="object" class="oe_highlight"
                                attrs="{'invisible': [('is_read', '=', True)]}"/>
                        <button name="action_delete" string="Delete Notification" type="object"
                                attrs="{'invisible': [('is_delete', '=', True)]}"/>
                        <field name="is_read" invisible="1"/>
                        <field name="is_delete" invisible="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="res_model"/>
                                <field name="title"/>
                                <field name="user_id" options="{'no_open': 1, 'no_create': 1, 'no_create_edit': 1}"/>
                                <field name="kind"/>
                                <field name="process"/>
                            </group>
                            <group>
                                <field name="send_date"/>
                                <field name="content"/>
                                <field name="type"/>
                                <field name="state"/>
                                <field name="error_message"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--search view-->
        <record id="notification_content_view_search" model="ir.ui.view">
            <field name="name">notification.content.search</field>
            <field name="model">notification.content</field>
            <field name="arch" type="xml">
                <search>
                    <field name="res_model"/>
                    <field name="user_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <group expand="0" string="Group By">
                        <filter name="sent" string="Sent" domain="[('state','=','sent'), ('error_message', '=', False)]"/>
                        <filter name="error" string="Error" domain="[('state','=','sent'), ('error_message', '!=', False)]"/>
                        <filter string="Function" name="model" domain="[]" context="{'group_by': 'res_model'}"/>
                        <filter name="user" string="User" context="{'group_by': 'user_id'}"/>
                        <filter string='Company' name="company" domain="[]" context="{'group_by': 'company_id'}"
                                groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

        <!--action view-->
        <record id="notification_content_action" model="ir.actions.act_window">
            <field name="name">Notification</field>
            <field name="res_model">notification.content</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face o_hidden"/>
            </field>
        </record>
    </data>
</odoo>