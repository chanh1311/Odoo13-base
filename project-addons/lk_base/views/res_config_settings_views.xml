<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--tree view-->

        <!--form view-->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_setting_search')]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="lk_base" id="lk_base" string="Configuration"
                         data-key="lk_base">
                        <div id="personalize">
                            <h2>Personalize</h2>
                            <div class="row o_settings_container">
                                <div class="col-xs-12 col-md-12 o_setting_box">
                                    <div class="o_setting_left_pane"/>
                                    <div class="o_setting_right_pane">
                                        <div class="content-group">
                                            <div class="row">
                                                <label for="logo" class="col-md-5 o_light_label"/>
                                                <field name="logo" widget="image"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12 o_setting_box">
                                    <div class="o_setting_left_pane"/>
                                    <div class="o_setting_right_pane">
                                        <div class="content-group">
                                            <div class="row">
                                                <label for="favicon" class="col-md-5 o_light_label"/>
                                                <field name="favicon" widget="image"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="password_policy">
                            <h2>Password Policy</h2>
                            <div class="row o_settings_container">
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_left_pane"/>
                                    <div class="o_setting_right_pane">
                                        <div class="content-group">
                                            <div class="row">
                                                <label for="password_length" class="col-md-5 o_light_label"/>
                                                <field name="password_length"/>
                                            </div>
                                            <div class="row">
                                                <label for="enable_upper" class="col-md-5 o_light_label"/>
                                                <field name="enable_upper" widget="boolean_toggle"/>
                                            </div>
                                            <div class="row">
                                                <label for="enable_numeric" class="col-md-5 o_light_label"/>
                                                <field name="enable_numeric" widget="boolean_toggle"/>
                                            </div>
                                            <div class="row">
                                                <label for="enable_special" class="col-md-5 o_light_label"/>
                                                <field name="enable_special" widget="boolean_toggle"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_left_pane"/>
                                    <div class="o_setting_right_pane">
                                        <div class="content-group">
                                            <div class="row">
                                                <label for="pass_strength" class="col-md-5 o_light_label"/>
                                                <field name="pass_strength"/>
                                            </div>
                                            <div class="row">
                                                <label for="enable_reuse" class="col-md-5 o_light_label"/>
                                                <field name="enable_reuse" widget="boolean_toggle"/>
                                            </div>
                                            <div class="row">
                                                <label for="enable_change_password" class="col-md-5 o_light_label"/>
                                                <field name="enable_change_password"/>
                                            </div>
                                            <div class="row">
                                                <label for="enable_expiration" class="col-md-5 o_light_label"/>
                                                <field name="enable_expiration"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="notification">
                            <h2>Notification</h2>
                            <div class="row o_settings_container">
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_left_pane"/>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Email</span>
                                        <div class="content-group">
                                            <div class="mt16 row">
                                                <label for="smtp_server" class="col-3 o_light_label"/>
                                                <field name="smtp_server"/>
                                                <div class="w-100"></div>
                                                <label for="smtp_email" class="col-3 o_light_label"/>
                                                <field name="smtp_email"/>
                                                <div class="w-100"></div>
                                                <label for="smtp_password" class="col-3 o_light_label"/>
                                                <field name="smtp_password" password="True"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_left_pane"/>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Application</span>
                                        <div class="content-group">
                                            <div class="mt16 row">
                                                <label for="smtp_email" class="col-3 o_light_label"/>
                                                <field name="smtp_email"/>
                                                <div class="w-100"></div>
                                                <label for="smtp_password" class="col-3 o_light_label"/>
                                                <field name="smtp_password" password="True"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        <!--search view-->

        <!--action view-->
        <record id="res_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module': 'lk_base'}</field>
        </record>
    </data>
</odoo>