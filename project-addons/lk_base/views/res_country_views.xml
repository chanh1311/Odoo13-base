        <!--hamlet-->
        <record id="action_res_country_state_hamlet" model="ir.actions.act_window">
            <field name="name">Hamlet</field>
            <field name="res_model">res.country.state.hamlet</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"disable_menu": "filter"}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face o_hidden"/>
