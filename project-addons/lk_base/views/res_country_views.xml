<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--tree view-->
        <!--country state-->
        <record id="view_country_state_tree_inherit" model="ir.ui.view">
            <field name="name">res.country.state.tree.inherit</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!--district-->
        <record id="res_country_state_district_tree" model="ir.ui.view">
            <field name="name">res.country.state.district.tree</field>
            <field name="model">res.country.state.district</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <!--commune-->
        <record id="res_country_state_commune_tree" model="ir.ui.view">
            <field name="name">res.country.state.commune.tree</field>
            <field name="model">res.country.state.commune</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="district_id"/>
                </tree>
            </field>
        </record>

        <!--hamlet-->
        <record id="res_country_state_hamlet_tree" model="ir.ui.view">
            <field name="name">res.country.state.hamlet.tree</field>
            <field name="model">res.country.state.hamlet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="commune_id"/>
                </tree>
            </field>
        </record>

        <!--form view-->
        <!--district-->
        <record id="res_country_state_district_form" model="ir.ui.view">
            <field name="name">res.country.state.district.form</field>
            <field name="model">res.country.state.district</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="state_id" options="{'no_create': 1, 'no_create_edit':1, 'no_open': 1}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--commune-->
        <record id="res_country_state_commune_form" model="ir.ui.view">
            <field name="name">res.country.state.commune.form</field>
            <field name="model">res.country.state.commune</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="district_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--hamlet-->
        <record id="res_country_state_hamlet_form" model="ir.ui.view">
            <field name="name">res.country.state.hamlet.form</field>
            <field name="model">res.country.state.hamlet</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="commune_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--search view-->
        <!--country state-->
        <record id="view_country_state_search_inherit" model="ir.ui.view">
            <field name="name">res.country.state.search.inherit</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='groupby_country']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!--district-->
        <record id="res_country_state_district_search" model="ir.ui.view">
            <field name="name">res.country.state.district.search</field>
            <field name="model">res.country.state.district</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

        <!--commune-->
        <record id="res_country_state_commune_search" model="ir.ui.view">
            <field name="name">res.country.state.commune.search</field>
            <field name="model">res.country.state.commune</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <group expand="1" string="Group By">
                        <filter name="district" string="District" context="{'group_by':'district_id'}"/>
                    </group>
                    <searchpanel>
                        <field name="district_id" icon="fa-th-list"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <!--hamlet-->
        <record id="res_country_state_hamlet_search" model="ir.ui.view">
            <field name="name">res.country.state.hamlet.search</field>
            <field name="model">res.country.state.hamlet</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <group expand="1" string="Group By">
                        <filter name="district" string="District" context="{'group_by':'district_id'}"/>
                        <filter name="commune" string="Commune" context="{'group_by':'commune_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--action view-->
        <!--country state-->
        <record id="base.action_country_state" model="ir.actions.act_window">
            <field name="context">{"disable_menu": "filter,groupBy"}</field>
            <field name="domain">[('country_id.code', '=', 'VN')]</field>
            <field name="name">Tá»‰nh/TP</field>
        </record>

